{
  "imports": {
    "@/": "./",
    "react": "npm:react@19.1.0",
    "react-dom": "npm:react-dom@19.1.0",
    "next": "npm:next@15.4.4",
    "@types/node": "npm:@types/node@^20",
    "@types/react": "npm:@types/react@^19",
    "@types/react-dom": "npm:@types/react-dom@^19",
    "typescript": "npm:typescript@^5",
    "@tailwindcss/postcss": "npm:@tailwindcss/postcss@^4",
    "tailwindcss": "npm:tailwindcss@^4",
    "neo4j-driver": "npm:neo4j-driver@5.24.0",
    "@neo4j/graphql": "npm:@neo4j/graphql@5.6.0",
    "@apollo/server": "npm:@apollo/server@4.9.5",
    "@as-integrations/next": "npm:@as-integrations/next@3.1.0",
    "graphql": "npm:graphql@16.8.1",
    "graphql-tag": "npm:graphql-tag@2.12.6",
    "@apollo/client": "npm:@apollo/client@3.8.7",
    "@graphql-codegen/cli": "npm:@graphql-codegen/cli@5.0.0",
    "@graphql-codegen/client-preset": "npm:@graphql-codegen/client-preset@4.1.0",
    "@graphql-codegen/introspection": "npm:@graphql-codegen/introspection@4.0.0"
  },
  "tasks": {
    "install": "deno install --allow-scripts",
    "dev": "deno run -A --watch npm:next@15.4.4 dev",
    "build": "deno run -A npm:next@15.4.4 build",
    "start": "deno run -A npm:next@15.4.4 start",
    "lint": "deno run -A npm:next@15.4.4 lint",
    "type-check": "deno run -A npm:typescript@^5/tsc --noEmit",
    "codegen": "deno run -A npm:@graphql-codegen/cli@5.0.0 --config codegen.ts",
    "codegen:watch": "deno run -A npm:@graphql-codegen/cli@5.0.0 --config codegen.ts --watch"
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "strict": true,
    "jsxImportSource": "react"
  },
  "fmt": {
    "include": ["app/", "*.ts", "*.tsx", "*.js", "*.jsx"],
    "exclude": [".next/", "node_modules/"],
    "options": {
      "singleQuote": true
    }
  },
  "nodeModulesDir": "auto",
  "unstable": [
    "node-globals"
  ],
  "lock": false
} 